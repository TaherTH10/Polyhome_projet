<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.taher.PolyHome">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.PolyHome"
        tools:targetApi="31">

        <!-- Activité principale : écran de connexion -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Autres écrans du projet -->
        <activity android:name=".ui.RegisterActivity" android:exported="false" />
        <activity android:name=".ui.HousesActivity" android:exported="true" />
        <activity android:name=".ui.DeviceListActivity" android:exported="false" />
        <activity android:name=".ui.OptionalCommandsActivity" android:exported="false" />
        <activity android:name=".ui.ChoiceActivity" android:exported="false" />
        <activity android:name=".ui.UsersActivity" android:exported="false" />


    </application>
</manifest>
